  "keywords": [
    "jekyll",
    "github"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/pizn/eevee.git"
  },
  "bugs": {
    "url": "https://github.com/pizn/eevee.git/issues"
  },
  "license": "MIT",
  "entry": {
    "index": "./src/entry/App.jsx"
  },
  "dependencies": {
    "antd": "0.11.x",
